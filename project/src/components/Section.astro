---
interface Props {
	id: string;
	title: string;
	class?: string;
}

const { id, title, class: className } = Astro.props;
---

<section id={id} class:list={["section", className]}>
	<div class="container">
		<h2>{title}</h2>
		<slot />
	</div>
</section>

<style>
	.section {
		padding: 8rem 0;
	}
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	h2 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 3rem;
	}
</style>